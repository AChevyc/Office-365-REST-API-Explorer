{"Groups":[
  {
    "UniqueId": "Group-1",
    "Title": "Lists",
    "Subtitle": "Common operations on lists",
    "ImagePath": "Assets/DarkGray.png",
    "Items":
    [
      {
        "UniqueId": "Group-1-Item-1",
        "Title": "Create a list",
        "Subtitle": "Create a simple list named \"My List\"",
        "ImagePath": "Assets/LightGray.png",
        "EndPoint" : "_api/web/lists",
        "Method" : "POST",
        "Headers" :  {
            "Authorization" : "Bearer + AccessToken -- The app retrieves the access token when it issues the HTTP request. The app will overwrite this header. Content-length is set automatically",
            "Accept"        : "application/json;odata=verbose",
            "Content-type"  : "application/json;odata=verbose"
        },
        "Body" : { 
            "__metadata": 
            { 
                "type": "SP.List" 
            }, 
            "AllowContentTypes": true, 
            "BaseTemplate": 100,
            "ContentTypesEnabled": true, 
            "Description": "My list description", 
            "Title": "My list" 
        }
      },
      {
        "UniqueId": "Group-1-Item-2",
        "Title": "Read a list",
        "Subtitle": "Read the \"My List\" items.",
        "ImagePath": "Assets/LightGray.png",
        "EndPoint" : "_api/web/lists/getbytitle('My List')/items",
        "Method" : "GET",
        "Headers" :  {
            "Authorization" : "Bearer + AccessToken -- The app retrieves the access token when it issues the HTTP request. The app will overwrite this header. Content-length is set automatically too",
            "Accept"        : "application/json;odata=verbose",
            "Content-type"  : "application/json;odata=verbose"
        },
        "Body" : { }
      },
      {
        "UniqueId": "Group-1-Item-3",
        "Title": "Update a list",
        "Subtitle": "Add a field to \"My List\"",
        "ImagePath": "Assets/LightGray.png",
        "EndPoint" : "_api/web/lists/getbytitle('My List')/Fields",
        "Method" : "POST",
        "Headers" :  {
            "Authorization" : "Bearer + AccessToken -- The app retrieves the access token when it issues the HTTP request. The app will overwrite this header. Content-length is set automatically",
            "Accept"        : "application/json;odata=verbose",
            "Content-type"  : "application/json;odata=verbose"
        },
        "Body" : { 
            "__metadata": 
            { 
                "type": "SP.Field" 
            }, 
            "Title"                 : "My field title",
            "FieldTypeKind"         : "1",
            "Required"              : "false",
            "EnforceUniqueValues"   : "false",
            "StaticName"            : "MyField"
        }
      },
      {
        "UniqueId": "Group-1-Item-4",
        "Title": "Delete a list",
        "Subtitle": "Delete the \"My List\" list",
        "ImagePath": "Assets/LightGray.png",
        "EndPoint" : "_api/web/lists/getbytitle('My List')",
        "Method" : "POST",
        "Headers" :  {
            "Authorization" : "Bearer + AccessToken -- The app retrieves the access token when it issues the HTTP request. The app will overwrite this header. Content-length is set automatically",
            "Accept"        : "application/json;odata=verbose",
            "Content-type"  : "application/json;odata=verbose",
            "IF-MATCH"  : "*",
            "X-HTTP-Method"  : "DELETE"
        },
        "Body" : { }
      }
    ]
  },
