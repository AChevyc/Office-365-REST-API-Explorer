<Page
    x:Class="Office365RESTExplorerforSites.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Office365RESTExplorerforSites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Windows.Storage.ApplicationData.Current.LocalSettings}"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock x:Name="pageTitle" Style="{StaticResource HeaderTextBlockStyle}" 
    		IsHitTestVisible="false" TextWrapping="WrapWholeWords"  VerticalAlignment="Bottom" Margin="0,320,0,20" Height="89" TextAlignment="Center" FontFamily="Global User Interface" FontSize="48">
    		Office 365 REST API 
            <LineBreak/>
            for Sites
        </TextBlock>
            <TextBox Name="spSite" Height="49" TextWrapping="Wrap" Margin="0,0,0,10" Text="Office 365 site e.g. https://contoso.sharepoint.com" Width="562" FontSize="24" Foreground="#FF383737" FontFamily="Global User Interface"/>
        <Button Content="Start" HorizontalAlignment="Center" Width="392" Height="58" FontSize="24" Click="Button_Click"/>
        </StackPanel>
    </Grid>

</Page>
